  <!-- NDR6 rule 9-87 (same as NDR5 rule 9-43) -->
  <pattern id="rule9-87b" xmlns="http://purl.oclc.org/dsdl/schematron">
    <title>No disallowed substitutions</title>
    <rule context="xs:element">
      <assert test="empty(@block)"
        >Rule 9-87: A reference schema document MUST NOT contain the attribute {}block or {}blockDefault.</assert>
    </rule>
  </pattern>
