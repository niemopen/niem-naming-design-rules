  <!-- NDR6 rule 9-42 (same as NDR5 rule 9-48) -->
  <pattern id="rule9-42b" xmlns="http://purl.oclc.org/dsdl/schematron">
    <title>Declarations are top-level</title>
    <rule context="xs:attribute[exists(@name)]">
      <assert test="exists(parent::xs:schema)"
        >Rule 9-42: An attribute declaration or element declaration MUST be top-level.</assert>
    </rule>
  </pattern>
