
  <!-- NDR6 rule 8-15 (same as NDR5 rule 4-5) -->
  <pattern id="rule8-15" xmlns="http://purl.oclc.org/dsdl/schematron">
    <title>Subset namespace asserts conformance</title>
    <rule context="*[. is nf:get-document-element(.)]">
      <assert test="nf:has-effective-conformance-target-identifier(., xs:anyURI('https://docs.oasis-open.org/niemopen/ns/specification/NDR/6.0/#ReferenceSchemaDocument'))"
        >Rule 8-15: A subset namespace must assert the conformance target identifier https://docs.oasis-open.org/niemopen/ns/specification/NDR/6.0/#SubsetSchemaDocument. This is an effective conformance target identifier of the schema document .</assert>
    </rule>
  </pattern>
