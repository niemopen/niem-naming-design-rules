
  <!-- NDR6 rule 9-20 (same as NDR5 rule 9-69) -->
  <pattern id="rule9-20b" xmlns="http://purl.oclc.org/dsdl/schematron">
    <title>Choice has minimum and maximum cardinality 1</title>
    <rule context="xs:choice">
      <assert test="empty(@maxOccurs) or (@maxOccurs instance of xs:integer
                                             and 1 = xs:integer(@maxOccurs))"
        >Rule 9-20: An element xs:choice MUST have a minOccurs and maxOccurs of 1.</assert>
    </rule>
  </pattern>
