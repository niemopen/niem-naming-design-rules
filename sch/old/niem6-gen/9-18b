
  <!-- NDR6 rule 9-18 (same as NDR5 rule 9-67) -->
  <pattern id="rule9-18b" xmlns="http://purl.oclc.org/dsdl/schematron">
    <title>Sequence has minimum and maximum cardinality 1</title>
    <rule context="xs:sequence">
      <assert test="empty(@maxOccurs) or (@maxOccurs instance of xs:integer
                                             and 1 = xs:integer(@maxOccurs))"
        >Rule 9-18: An element xs:sequence MUST have a minOccurs and maxOccurs of 1.</assert>
    </rule>
  </pattern>
